model Paging;

import judo::types;

entity Item {
    field Integer number;
    field String topic;
    field String listName <= self.container(type = List).name;
}

transfer TransferItem (Item item){
    field Integer number <= item.number bind;
    field String topic <= item.topic bind;
    field String listName <= item.listName;
    event create eventCreate();
}

entity List {
    field String name;
    field Item[] items;
}

transfer TransferList (List list){
    field String name <= list.name bind;
    relation TransferItem[] items <= list.items eager:true create:true;
}

entity LogEntry {
    field Timestamp timestamp;
    field String message;
}

transfer TransferLogEntry (LogEntry logEntry){
    field Timestamp timestamp <= logEntry.timestamp bind;
    field String message <= logEntry.message bind;
}
