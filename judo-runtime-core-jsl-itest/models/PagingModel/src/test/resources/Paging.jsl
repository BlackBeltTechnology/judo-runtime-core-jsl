model Paging;

import judo::types;

entity Item {
    field Integer number;
    field String topic;
    field String listName <= self.container(entityType = List).name;
}

transfer TransferItem (Item item){
    field Integer number <= item.number update;
    field String topic <= item.topic update;
    field String listName <= item.listName;
    event create eventCreate();
}


entity List {
    field String name;
    field Item[] items;
}

transfer TransferList (List list){
    field String name <= list.name update;
    relation TransferItem[] items <= list.items eager:true create:true;
}

entity LogEntry {
    field Timestamp timestamp;
    field String message;
}

transfer TransferLogEntry (LogEntry logEntry){
    field Timestamp timestamp <= logEntry.timestamp update;
    field String message <= logEntry.message update;
}
