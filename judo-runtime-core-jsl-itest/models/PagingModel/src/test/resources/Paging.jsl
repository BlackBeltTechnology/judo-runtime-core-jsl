model Paging;

import judo::types;

entity Item {
    field Integer number;
    field String topic;
    field String listName <= self!container(entityType = List).name;
}

transfer TransferItem (Item item){
    field Integer number <= item.number input:true;
    field String topic <= item.topic input:true;
    field String listName <= item.listName;
}


entity List {
    field String name;
    field Item[] items;
}

transfer TransferList (List list){
    field String name <= list.name input:true;
    relation TransferItem[] items <= list.items eager:true choices:Item!all();
}

entity LogEntry {
    field Timestamp timestamp;
    field String message;
}

transfer TransferLogEntry (LogEntry logEntry){
    field Timestamp timestamp <= logEntry.timestamp input:true;
    field String message <= logEntry.message input:true;
}
